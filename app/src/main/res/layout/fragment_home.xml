<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".FavoriteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"

        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <!-- Weather icon and temperature -->
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:src="@drawable/weather"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

                <!-- Temperature Text -->
                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19°"
                    android:textSize="56sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <!-- Precipitation and Temperature Range -->
                <TextView
                    android:id="@+id/precipitationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precipitations"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/maxMinTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max: 24°  Min: 18°"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp"/>

                <!-- House Image -->
                <ImageView
                    android:id="@+id/houseImage"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:src="@drawable/house"
                android:layout_marginTop="16dp"
                android:contentDescription="House image"/>

                <!-- Horizontal Scroll View for hourly forecast -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"/>



            </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
